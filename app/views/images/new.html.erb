
    <section>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="product_single">
            <h1>Create a new image:</h1>

            <%= form_tag '/images', method: :post do %>

              <div>
                <%= label_tag :url %>
                <%= text_field_tag :url %>
              </div>
              
              <div>
                <%= label_tag :product_id %>
                <%= collection_select :product, :product_id, Product.all, :id, :name %>
              </div>

              <%= submit_tag "Process New Image" %>
            <% end %>
          </div>
        </div>
      </div>
    </section>