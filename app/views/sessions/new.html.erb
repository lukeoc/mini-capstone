<h2>login</h2>
<%= form_tag '/login', method: :post do %>
  <div>
    <label for="email">email</label>
    <input type="email" name="email">
  </div>
  <div>
    <label for="password">password</label>
    <input type="password" name="password">
  </div>
  <input type="submit" value="Login">
<% end %>